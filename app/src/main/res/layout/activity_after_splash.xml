<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="travelapp.tamasya.view.startup.AfterSplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:src="@drawable/app_icon"
            android:id="@+id/imgAppIcon"/>

        <travelapp.tamasya.view.customviews.textview.TextViewAvenirBook
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tamsaya"
            android:textColor="@color/colorPrimary"
            android:layout_centerInParent="true"
            android:textSize="38sp"
            android:id="@+id/txtAppName"
            android:layout_below="@id/imgAppIcon"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <travelapp.tamasya.view.customviews.button.ButtonAvenirBook
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:text="LOGIN"
            android:textColor="@color/colorWhite"
            android:textAppearance="?android:textAppearanceMedium"
            android:onClick="doLogin"/>

        <travelapp.tamasya.view.customviews.button.ButtonAvenirBook
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:text="REGISTER"
            android:textColor="@color/colorWhite"
            android:textAppearance="?android:textAppearanceMedium"
            android:onClick="doRegistration"/>

    </LinearLayout>

</LinearLayout>
